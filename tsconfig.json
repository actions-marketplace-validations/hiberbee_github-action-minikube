{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "ES6"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": false,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES2020",
    "removeComments": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/*",
    "test/*"
  ]
}
