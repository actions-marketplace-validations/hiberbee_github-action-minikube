{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": false,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/*",
    "test/*"
  ]
}
