{
  "name": "github-action-minikube",
  "version": "1.0.0",
  "private": true,
  "description": "Start a Kubernetes cluster with Minikube in github actions",
  "main": "build/src/main.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build",
    "lint": "eslint --fix src/**/*.ts",
    "dist": "ncc build build/src/main.js",
    "test": "jest",
    "start": "cross-env RUNNER_TEMP=build node dist/index.js",
    "all": "npm run clean && npm run build && npm test && npm run dist && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiberbee/github-action-minikube.git"
  },
  "jest": {
    "rootDir": "build/test"
  },
  "keywords": [
    "actions",
    "ci",
    "github",
    "kubernetes",
    "minikube"
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad@hiberbee.com",
    "url": "https://github.com/vladyslavvolkov"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run all"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "semi": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {}
    },
    "plugins": [],
    "rules": {},
    "settings": {}
  },
  "eslintIgnore": [
    "*.log",
    ".github",
    ".idea",
    ".env*",
    ".eslintcache",
    "build",
    "dist",
    "node_modules",
    "package.json"
  ],
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/tool-cache": "^1.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "cross-env": "^7.0.2",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "@zeit/ncc": "^0.22.3",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-github": "^4.0.1",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.2",
    "typescript": "^3.9.6"
  }
}
